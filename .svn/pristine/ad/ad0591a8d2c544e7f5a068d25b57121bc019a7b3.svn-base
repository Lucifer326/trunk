/*登录界面*/
.login_bj {
    width: 100%;
    height: 100%;
    margin: 0 auto;
}

.login_bj img {
    width: 100%;
    height: 100%;
    display: block;
    position: fixed;
    right: 0px;
}

.title {
    width: 570px;
    height: 80px;
    background: url(/img/log_title.png) no-repeat;
    position: absolute;
    left: 50%;
    top: 15%;
    margin-left: -293px;
}

.main {
    width: 824px;
    height: 90px;
    background: url(/img/main_bj.png) no-repeat;
    position: absolute;
    left: 50%;
    top: 45%;
    margin-left: -421px;
}

.form {
    width: 770px;
    height: 36px;
    margin: 27px;
}

.one {
    width: 300px;
    height: 34px;
    margin: 1px;
    float: left;
    margin-right: 16px;
}

.one span {
    font-size: 16px;
    color: #fff;
    float: left;
    line-height: 34px;
}

.one .cons {
    width: 230px;
    height: 32px;
    background: #fff;
    border: 1px solid #999;
    border-radius: 3px;
    float: left;
}

.one .cons:hover {
    border: 1px solid #e8790c;
}

.one .text {
    width: 200px;
    height: 30px;
    line-height: 32px;
    padding-left: 24px;
    border: none;
}

.user {
    width: 16px;
    height: 16px;
    background: url(/img/icon_user.png) no-repeat 5px center #fff;
}

.mm {
    width: 16px;
    height: 16px;
    background: url(/img/icon_mm.jpg) no-repeat 5px center #fff;
}

.btn {
    width: 122px;
    height: 36px;
    background: url(/img/log_btn.png) no-repeat;
    margin-top: 1px;
    border: none;
}

.btn:hover {
    cursor: pointer;
}
