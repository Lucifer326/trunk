            });

            $('#btn').on('click', function () {

                parent.layer.open({
                    type: 2,
                    title: '物资生产商',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area: ['840px', '520px'],
                    zIndex: 101,
                    content: 'protocalController.do?materialProducer',
                    btn: ['确定', '取消'],
                    yes: function (index, layero) {
                        var data = $(layero).find("iframe")[0].contentWindow.CheckSelect();
                        if (data != false) {
                            $("#txt").val(data);
                            parent.layer.close(index);
                        }
                    }

                });
            });

            $('#btn1').on('click', function () {

                layer.open({
                    id: "ibtn1",
                    type: 2,
                    title: '协议储备物资',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area: ['840px', '520px'],
                    zIndex: 101,
                    content: 'protocalController.do?materialCategory',
                    btn: ['确定', '取消'],
                    yes: function (index, layero) {
                        //var iframeWin = window[layero.find('iframe')[0]['name']];
                        var data = $(layero).find("iframe")[0].contentWindow.checked();
                        if (data != false) {
                            $("#txt1").val(data);
                            layer.close(index);
                        }

                    }

                });
            });
            $('#btnin').on('click', function () {

                parent.layer.open({
                    type: 2,
                    title: '组织机构',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area: ['840px', '520px'],
                    zIndex: 101,
                    content: 'DisasterCapitalManage/SuperiorFinancing/SelectOrg',
                    btn: ['确定', '取消'],
                    yes: function (index, layero) {
                        var data = $(layero).find("iframe")[0].contentWindow.CheckSelect();
                        if (data != false) {
                            $("#txtin").val(data);
                            parent.layer.close(index);
                        }
                    }

                });
            });
            $('#btnout').on('click', function () {

                parent.layer.open({
                    type: 2,
                    title: '组织机构',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area: ['840px', '520px'],
                    zIndex: 101,
                    content: 'DisasterCapitalManage/SuperiorFinancing/SelectOrg',
                    btn: ['确定', '取消'],
                    yes: function (index, layero) {
                        var data = $(layero).find("iframe")[0].contentWindow.CheckSelect();
                        if (data != false) {
                            $("#txtout").val(data);
                            parent.layer.close(index);
                        }
                    }

                });
            });
            $('#Add').on('click', function () {
                console.log($("#formPro").serialize());

                layer.open({
                    type: 2,
                    title: '新建',
                    maxmin: true,
                    shadeClose: true, //点击遮罩关闭层
                    area: ['800px', '400px'],
                    zIndex: 100,
                    content: 'protocalController.do?addProtocal',
                    btn: ['确定', '取消'],
                    yes: function (index, layero) {
                        var check = validateProtocalForm($(layero).find('iframe')[0].contentWindow);
                        if (!check){
                            return;
                        }
                        $.ajax({
                            type : "POST",
                            url : "${url}/protocalController.do?aProtocal",
                            data : $(layero).find('iframe')[0].contentWindow.$('#ProtocolReserveInfoAddForm').serialize(),
                            async:false,
                            success : function (data) {
                                var da = JSON.parse(data);
                                if (da.success){
                                    swal({
                                            title: "新建成功",
                                            type: "success",
                                            confirmButtonText: "确定",
                                            zIndex: 101
                                        },
                                        function () {
                                            layer.close(index);
                                            window.location.href = "protocalController.do?list";
                                        });
                                }else {

                                }
                            }
                        });

                    }

                });
            });


            //$("input[name='']:checked")

            $('#Edit').on('click', function () {
                /*var selectedCount = 0;
                $("#exampleTableEvents").find('tr').each(function () {
